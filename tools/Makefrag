# -*- makefile-gmake -*-

$(O)/tools/mkfs: tools/mkfs.c include/fs.h
	$(Q)mkdir -p $(@D)
	gcc -Werror -Wall -I. -idirafter stdinc -o $@ $<

$(O)/tools/perf-report: tools/perf-report.cc include/sampler.h
	$(Q)mkdir -p $(@D)
	g++ -std=c++11 -m64 -Werror -Wall -I. -o $@ $<

ALL += $(O)/tools/perf-report
